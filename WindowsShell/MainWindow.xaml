<Window x:Class="WindowsShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowsShell" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Üdv a WindowsShell-ben!"
                       FontSize="20"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Button Content="Install Chocolatey"
                    Width="200"
                    Height="40"
                    Margin="0,0,0,10"
                    Click="InstallChocolatey_Click"/>

            <Button Content="Reboot to UEFI"
                    Width="200"
                    Height="40"
                    Click="RebootUEFI_Click"/>
        </StackPanel>
    </Grid>
</Window>
