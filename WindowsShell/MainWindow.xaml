<Window x:Class="WindowsShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsShell"
        mc:Ignorable="d"
        Title="WindowsShell 1.0 BETA" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="#1E1E1E">
        <Border CornerRadius="30" 
                Background="#2A2A2A" 
                Margin="10,30,10,10"
                Name="MainBorder">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="20,10,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Button x:Name="HomeTab" 
                                Content="Home" 
                                Width="120" 
                                Height="30" 
                                Margin="0,0,5,0" 
                                Background="#3A3A3A"
                                Click="TabButton_Click"/>
                        <Button x:Name="RemoveInstallTab" 
                                Content="Remove/Install apps" 
                                Width="285" 
                                Height="30" 
                                Margin="5,0,5,0" 
                                Background="#1E1E1E"
                                Click="TabButton_Click"/>
                        <Button x:Name="PackageStoreTab" 
                                Content="Package store" 
                                Width="120" 
                                Height="30" 
                                Margin="5,0,0,0" 
                                Background="#1E1E1E"
                                Click="TabButton_Click"/>
                    </StackPanel>

                    <TextBlock Grid.Column="2" 
                               Text="WindowsShell 1.0 BETA" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </Grid>

                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,10,20,10">
                    <RadioButton x:Name="LangHU" 
                                 Content="HU" 
                                 GroupName="Language" 
                                 Checked="Language_Checked" 
                                 Margin="0,0,10,0"/>
                    <RadioButton x:Name="LangEN" 
                                 Content="EN" 
                                 GroupName="Language" 
                                 Checked="Language_Checked" 
                                 IsChecked="True"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="20,0,20,20">

                    <Grid x:Name="HomeContent" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Privacy" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>
                            <Button Content="Uninstall Edge and undo Edge redirections" Height="30" Margin="0,0,0,5"/>

                            <TextBlock Text="Gaming" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>
                            <Button Content="Enable ultimate power plan" Height="30" Margin="0,0,0,5"/>

                            <TextBlock Text="Files" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>
                            <Button Content="Clean recycle bin" Height="30" Margin="0,0,0,5"/>

                            <TextBlock Text="Updates" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>
                            <Button Content="Enable custom Windows update presets" Height="30" Margin="0,0,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Disable functions, cleanup" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>
                            <Button Content="Disable telemetry, disable ads" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Disable sticky keys hotkey" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Delete temporary files" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Repair/update Chocolatey" Height="30" Margin="0,0,0,10"/>

                            <Border CornerRadius="10" Background="#3A3A3A" Padding="10">
                                <ItemsControl x:Name="OptionsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding}" Margin="0,5"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>

                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,20">
                            <TextBlock Text="Welcome to WindowsShell!" FontSize="16" Foreground="White"/>
                            <TextBlock Text="1.0 BETA" FontSize="14" Foreground="LightGray" Margin="0,5,0,0"/>
                            <TextBlock Margin="0,5,0,0">
                                <Hyperlink NavigateUri="http://www.szdominikk1.com" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="SzDominikk1 Industries | www.szdominikk1.com" FontSize="12" Foreground="LightBlue"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Text="Szuromi Dominik László" FontSize="10" Foreground="LightGray" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20">
                            <Button Content="Reboot to UEFI" Width="150" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Reboot" Width="150" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Shutdown" Width="150" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Exit" Width="150" Height="30" Click="ExitButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="RemoveInstallContent" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Installed applications" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid x:Name="InstalledAppsGrid" 
                                      AutoGenerateColumns="False" 
                                      Background="Transparent" 
                                      Foreground="White"
                                      HeadersVisibility="Column"
                                      BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Select" Width="Auto"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="Auto"/>
                                    <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="Auto"/>
                                    <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="*"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="2*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="Remove" Width="100" Height="30" Margin="0,0,10,0"/>
                                <Button Content="Select all" Width="100" Height="30" Margin="0,0,10,0"/>
                                <Button Content="Select" Width="100" Height="30"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <Grid x:Name="PackageStoreContent" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0" 
                                 Text="Package store (search to browse)" 
                                 Foreground="Gray" 
                                 Background="#3A3A3A" 
                                 BorderThickness="0" 
                                 Height="30" 
                                 Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1" 
                                  x:Name="PackageStoreGrid" 
                                  AutoGenerateColumns="False" 
                                  Background="Transparent" 
                                  Foreground="White"
                                  HeadersVisibility="Column"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Select" Width="Auto"/>
                                <DataGridTextColumn Header="Package" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="Auto"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Install selected" Width="120" Height="30" Margin="0,0,10,0"/>
                            <Button Content="Clear selection" Width="120" Height="30" Margin="0,0,10,0"/>
                            <Button Content="Remove" Width="120" Height="30"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>